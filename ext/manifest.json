{
"manifest_version": 2,

"name": "Interactive NMT",
"description": "Interactively translate webpages",
"version": "1.0",
"background": {
    "scripts": ["js/jquery.js", "config.js", "js/background.js"],
    "persistent": true
},

"browser_action": {
    "default_popup": "popup.html"
},
"permissions": [
    "activeTab",
    "tabs",
    "downloads",
    "storage",
    "https://api.cognitive.microsofttranslator.com/"
],
"web_accessible_resources": ["css/*", "bootstrap.min.css", "fix.css"]
}
